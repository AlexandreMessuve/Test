{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Cr√©ation d'une recette</h1>
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>

        </div>
        <div class="form-group">
            {{ form_label(form.minute) }}
            {{ form_widget(form.minute) }}
            <div class="form-error">
                {{ form_errors(form.minute) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.numberOfPer) }}
            {{ form_widget(form.numberOfPer) }}
            <div class="form-error">
                {{ form_errors(form.numberOfPer) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.difficulty) }}
            {{ form_widget(form.difficulty) }}
            <div class="form-error">
                {{ form_errors(form.difficulty) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.step_description) }}
            {{ form_widget(form.step_description) }}
            <div class="form-error">
                {{ form_errors(form.step_description) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
            <div class="form-error">
                {{ form_errors(form.price) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.isFavorite) }}
            {{ form_widget(form.isFavorite) }}
            <div class="form-error">
                {{ form_errors(form.isFavorite) }}
            </div>
        </div>

        {{ form_row(form.ingredientsList) }}

        <div class="form-group">
            {{ form_row(form.submit) }}
        </div>


        {{ form_end(form) }}
    </div>

{% endblock %}