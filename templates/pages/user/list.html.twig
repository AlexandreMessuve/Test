{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-2">Utilisateurs : </h1>
        <div class="d-flex flex-wrap align-items-stretch mt-5">
            {% for user in users %}
                <div class="card mt-5 mx-2" style="height: 300px; width: 400px " >
                    <img class="card-img-top" height="80px"  width="400px" src="{{ asset('assets/img/20456790.webp') }}">

                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title text-center">{{ user.nom | upper }}  {{ user.prenom | capitalize}}</h4>
                        <h6 class="card-subtitle mb-2 text-muted text-center">{{ user.username }}</h6>
                        <p class="card-text">{{ user.bio }}</p>
                        <a href="{{ path('user.index', {id:user.id}) }}" class="card-link mt-auto align-self-start">Profil</a>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-2">
            {{ knp_pagination_render(users) }}
        </div>
    </div>

{% endblock %}