{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="h3 mb-3 mt-4 font-weight-normal text-center">Connectez-vous</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4 text-center">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('note') %}
            <div class="alert alert-danger mt-4 text-center">
                {{ message }}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger mt-4 text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <form class="form" method="post">


            <div class="form-group mt-4">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group mt-4">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            </div>


            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="form-group d-flex justify-content-center mt-4">
                <button class="btn btn-lg btn-primary" type="submit">
                    Connexion
                </button>
            </div>
        </form>
    </div>

{% endblock %}
